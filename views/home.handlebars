<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form action="/todos" method="POST" class="mb-4">
                    <div class="input-group">
                        <input type="text" name="title" class="form-control" placeholder="أضف مهمة جديدة..." required>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> إضافة
                        </button>
                    </div>
                </form>

                <div class="todo-list">
                    {{#if todos.length}}
                        {{#each todos}}
                            <div class="todo-item card mb-2">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <form action="/todos/{{this.id}}/toggle" method="POST" class="me-3">
                                            <input type="hidden" name="completed" value="{{#if this.completed}}false{{else}}true{{/if}}">
                                            <button type="submit" class="btn btn-link p-0">
                                                <i class="fas fa-check-circle {{#if this.completed}}text-success{{else}}text-secondary{{/if}}"></i>
                                            </button>
                                        </form>
                                        <span class="{{#if this.completed}}completed{{/if}}">{{this.title}}</span>
                                    </div>
                                    <form action="/todos/{{this.id}}/delete" method="POST">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {{/each}}
                    {{else}}
                        <p class="text-center text-muted">لا توجد مهام حالياً</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
